<TemperatureLabel@Label>:
    font_size: 20
    halign: 'center'
    valign: 'middle'

<SetTemperature@TextInput>:
    multiline:False
    font_size: 20
    halign: 'center'
    valign: 'middle'
    
<SetButton@Button>:
    font_size: 25
    halign: 'center'
    valign: 'middle'
    
<EmptyLabel@Label>:
    font_size: 20
    halign: 'center'
    valign: 'middle'

<MotorOutput@Label>
    font_size: 30
    halign: 'center'
    valign: 'middle'

<FanOutput@Label>
    font_size: 30
    halign: 'center'
    valign: 'middle'

<MainLayout>:

    BoxLayout:
        orientation: "vertical"
        #Target Temperature Row
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                TemperatureLabel:
                    text: "Target Temp."
                EmptyLabel:
#                    on_text_validate:
                    id: targtemp
                    text: str(targtemp_slider.value_normalized)
                    text: str(targtemp_slider.value)
                         
            Slider:
                min: 25
                max: 35
                value_normalized: 0.5
                step: 0.01
                id: targtemp_slider
                on_touch_move: 
                on_touch_up:
           
        #System Temperature Row
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                TemperatureLabel:
                    text: "System Temp."
                EmptyLabel:
                    id: systemp
                    text: str(systemp_slider.value_normalized)
                    text: str(systemp_slider.value)           
            Slider:
                min: 25
                max: 45
                value_normalized: 0.5
                step: 0.01
                id: systemp_slider
                on_touch_move:
                on_touch_up:
           
        BoxLayout:
            orientation: 'horizontal'
            GridLayout:
                cols: 2
                MotorOutput:
                    text: "Motor Power"
                FanOutput:
                    text: "Fan Power"
                MotorOutput:
                    text: ''
                    id: motorout
                FanOutput:
#                    text: str(root.motorandfan_output)
                    id: fanout
        ProgressBar:
            id: motorbar
                